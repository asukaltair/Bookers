<div class="index">
	<h2 class="index-title">Books</h2>

	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book.id) %></td>
					<td><%= link_to "Edit", edit_book_path(book.id) %></td>
					<td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h3 class="index-new">New Book</h3>

	<%= form_for(@book) do |f| %>

		<p class="form-title">Title</p>
		<%= f.text_field :title %>

		<p class="form-title">Body</p>
		<%= f.text_area :body %>

		<p class="button">
		<%= f.submit "Create Book" %>
		</p>

	<% end %>
</div>