<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book.id) %></td>
				<td><%= link_to "Edit", edit_book_path(book.id) %></td>
				<td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<h3>New Book</h3>

<%= form_for(@book) do |f| %>

	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %>

	<%= f.submit "Create Book" %>

<% end %>