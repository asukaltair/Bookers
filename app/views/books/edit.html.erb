<div class="edit">
	<h2 class="edit-title">Editing Book</h2>

	<%= form_for(@book) do |f| %>

		<p class="form-title">Title</p>
		<%= f.text_field :title %>

		<p class="form-title">Body</p>
		<%= f.text_area :body %>

		<p class="button">
		<%= f.submit "Update Book" %>
		</p>

	<% end %>

	<div class="edit-button">
	<%= link_to "Show", book_path(@book) %>
	|
	<%= link_to "Back", books_path %>
	</div>

</div>